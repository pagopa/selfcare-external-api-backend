meta {
  name: getInstitutionUsers
  type: http
  seq: 5
}

get {
  url: {{apiBaseUrl}}/external/internal/v1/institutions/{{institutionId}}/users?productId={{productId}}
  body: none
  auth: inherit
}

params:query {
  ~productRoles: MANAGER
}

headers {
  Ocp-Apim-Subscription-Key: {{apimKeyInternal}}
}

script:post-response {
  const uuidRegex = /^[0-9a-f]{8}-[0-9a-f]{4}-[1-5][0-9a-f]{3}-[89ab][0-9a-f]{3}-[0-9a-f]{12}$/i;

  test("getInstitutionUsers ok", function() {
    expect(res.getStatus()).to.equal(200);

    const jsonData = res.getBody();

    expect(jsonData).to.be.an("array");

    if (jsonData.length > 0) {
      jsonData.forEach(user => {
        expect(user).to.have.property("id").to.match(uuidRegex);
        expect(user).to.have.property("name").that.is.a("string");
        expect(user).to.have.property("surname").that.is.a("string");
      });
    }
  });
}

settings {
  encodeUrl: true
}
